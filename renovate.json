{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["npm"],
  "automerge": false,
  "labels": ["dependencies"],
  "timezone": "Asia/Tehran",
  "schedule": ["after 9pm and before 6am on sunday"],
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "npm dependencies"
    }
  ]
}
